// 973. K Closest Points to Origin

class Solution {
    public int[][] kClosest(int[][] points, int k) {
        PriorityQueue<int[]> sortedPoints = new PriorityQueue<>(
            (a, b) -> Double.compare(dist(a), dist(b))
        );

        for(int[] p : points)
            sortedPoints.offer(p);

        int[][] result = new int[k][2];
        for(int i = 0; i < k; i++) {
            int[] point = sortedPoints.poll();
            result[i][0] = point[0];
            result[i][1] = point[1];
        }

        return result;
    }

    public double dist(int[] p) {
        int x = p[0], y = p[1];
        return Math.sqrt(x*x + y*y);
    }
}