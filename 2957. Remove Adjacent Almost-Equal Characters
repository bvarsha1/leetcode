// 2957. Remove Adjacent Almost-Equal Characters

class Solution {
    public int removeAlmostEqualCharacters(String word) {
        int n = word.length();
        if (n <= 1) {
            return 0;
        }

        char[] charr = word.toCharArray();
        int ops = 0;
        for (int i = 1; i < n; i++) {
            // check if prev and curr char are almost equal
            if(charr[i] == charr[i - 1] || Math.abs(charr[i] - charr[i - 1]) == 1) {
                ops++;

                // find replacement for this operation
                // replacement also has to be done so future comparitions dont get wrong
                for(char rep = 'a'; rep <= 'z'; rep++) {
                    if (rep != charr[i - 1] 
                        && (i + 1 >= n || Math.abs(rep - charr[i + 1]) > 1)
                    ) {
                        charr[i] = rep;
                        break;
                    }
                }
            }
        }
        return ops;
    }
}