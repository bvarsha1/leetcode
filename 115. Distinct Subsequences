// 115. Distinct Subsequences

class Solution {
    public int numDistinct(String s, String t) {
        int ns = s.length(), nt = t.length();

        int[][] dp = new int[ns + 1][nt + 1];
        for(int i = 0; i <= ns; i++) {
            for(int j = 0; j <= nt; j++) {
                dp[i][j] = (j == 0) ? 1 : 0;
            }
        }
        
        for(int i = 1; i <= ns; i++) {
            for(int j = 1; j <= nt; j++) {
                dp[i][j] = dp[i - 1][j];
                if(s.charAt(i - 1) == t.charAt(j - 1))
                    dp[i][j] += dp[i - 1][j - 1];
            }
        }

        return dp[ns][nt];
    }
}