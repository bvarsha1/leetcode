// 45. Jump Game II

class Solution {
    public int jump(int[] nums) {
        int n = nums.length;
        int l = 0, r = 0;
        int ans = 0;
        while(r < n - 1) {
            int farthest = 0;
            // calculate the farthest dist reached from current window range
            for(int i = l; i <= r; i++) {
                farthest = Math.max(farthest, i + nums[i]);
            }
            l = r + 1;
            r = farthest;
            ans++;
        }
        return ans;
    }
}